<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.exjobb.feedloopt.fragments.RegisterFragment"
    android:background="@color/colorAccent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <TextView
        android:text="Register your Feedloop Teacher account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_headline"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/register_headline"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:id="@+id/register_name"
        android:hint="Name"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/register_name"
        android:layout_alignParentStart="true"
        android:id="@+id/register_email"
        android:hint="Email"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/register_email"
        android:layout_alignParentStart="true"
        android:id="@+id/register_password"
        android:hint="Password"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="12sp"/>

    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:background="#0076FF"
        android:textColor="#fff"
        android:layout_marginTop="25dp"
        android:id="@+id/register_button"
          />

</RelativeLayout>
